<h1>Moober</h1>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'Return to Services', services_path %> |
  <%= link_to 'Purchase this service', new_charge_path(service_id: @service.id) %> |
  <%= link_to 'Profiles', users_path %> |
  <%= link_to 'List of Your Orders', orders_path %> |
  <% if current_user.can_update?(@service) %>
    <%= link_to 'Edit', edit_service_path(@service) %> |
  <% end %>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %> |
</nav>

<p>
  <strong>Service:</strong>
  <%= @service.service_id %>
</p>

<p>
  <strong>Vehicle:</strong>
  <%= @service.vehicle %>
</p>

<p>
  <strong>Vehicle Picture:</strong>
   <%= image_tag @service.image_url(:medium) %>
</p>

<p>
  <strong>Service Description:</strong>
  <%= @service.name %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @service.cost %>
</p>

<p>
  <strong>Driver:</strong>
  <%= @service.driver_id %>
</p>

<p>
  <strong>Distance:</strong>
  <%= @service.distance %>
</p>

<iframe
  width="800"
  height="650"
  frameborder="0" style="border:0"
